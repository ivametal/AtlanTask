<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="16dp"
    android:layout_width="match_parent"
    android:layout_height="100dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/cardview_comment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp" />
        <TextView
            android:id="@+id/cardview_comment_mail"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerHorizontal="true"
            android:layout_below="@+id/cardview_comment_name"/>
        <TextView
            android:id="@+id/cardview_comment_body"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/cardview_comment_mail"
            android:maxLines ="2"
            android:padding="4dp"/>
        <EditText
            android:id="@+id/cardview_comment_positionedittext"
            android:layout_width="42dp"
            android:inputType="number"
            android:layout_height="wrap_content"
            android:maxLength="3"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"/>
        <Button
            android:id="@+id/cardview_comment_getbutton"
            android:layout_width="42dp"
            android:layout_height="34dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="16dp"
            android:layout_below="@id/cardview_comment_positionedittext"
            android:layout_alignParentRight="true"
            android:text="get"
            android:textSize="9sp"/>
        <ImageView
            android:id="@+id/cardview_deletebutton"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:visibility="invisible"
            android:layout_alignParentTop="true"
            android:layout_margin="6dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>